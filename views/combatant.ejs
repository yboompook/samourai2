<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <!-- Liens vers les fichiers CSS de Bootstrap -->
  <link rel="stylesheet" href="../css/combatant.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <%- include('header.ejs') %>
  
    <div id="detailContainer" class="detail-container">
      <div id="detailWindow" class="modal custom-modal">
        <div class="modal-content">
          <div class="header">
            <div class="name-container">
              <h1 class="name"></h1>
            </div>
            <div class="fatigue-niveau-container">
              <div class="fatigue-container">
                <p class="fatigue"></p>
              </div>
              <div class="niveau-container">
                <p class="niveau"></p>
              </div>
            </div>
          </div>
          <div class="stats">
              <div class="stat">
                <p class="vitalite"></p>
                <button class="btn" id="plusvitalite">+</button>
              </div>
              <div class="stat">
                <p class="endurance"></p>
                <button class="btn" id="plusendurance">+</button>
              </div>
              <div class="stat">
                <p class="puissance"></p>
                <button class="btn" id="pluspuissance">+</button>
              </div>
              <div class="stat">
                <p class="dexterite"></p>
                <button class="btn" id="plusdexterite">+</button>
              </div>
                <button class="btn stat" id="combattre">combatre</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container text-center mt-3">
      
    <!--<h1>Combatant Table</h1>-->
    <button id="generateCombatants" class="btn btn-primary">Générer des combattants</button>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Vitalité</th>
          <th>Endurance</th>
          <th>Puissance</th>
          <th>Dextérité</th>
          <th>Fatigue</th>
          <th>Niveau</th>
        </tr>
      </thead>
      <tbody id="combatantTableBody">
        <!-- Les combattants seront ajoutés dynamiquement ici -->
      </tbody>
    </table>
    <label id="page" class="pluscombatant"></label>
    <button id="moinsun" class="btn btn-primary pluscombatant"><</button>
    <button id="moinscinq" class="btn btn-primary pluscombatant"><<</button>
    <button id="premier" class="btn btn-primary pluscombatant">Premier</button>
    <button id="dernier" class="btn btn-primary pluscombatant">Dernier</button>
    <button id="pluscinq" class="btn btn-primary pluscombatant">>></button>
    <button id="plusun" class="btn btn-primary pluscombatant">></button>
  </div>

  <!-- Liens vers les fichiers JavaScript de Bootstrap (jQuery requis) -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  <script src="../controllers/combatant.js"></script>
</body>
</html>
