<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Clan</title>
  <!-- Liens vers les fichiers CSS de Bootstrap -->
  <link rel="stylesheet" href="../css/clan.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <%- include('header.ejs') %>


  <div class="container mt-5">

    <!-- Section pour les joueurs ayant déjà un clan -->
    <div id="clanSection" hidden>
      <h1 class="mb-4">Bienvenue sur la page du clan <span id="clanName"></span></h1>
      <div id="leaveDeleteButton" class="text-end">
        <!-- Le bouton sera ajouté ici avec JavaScript -->
      </div>
      <h2 class="mb-3">il y a <span id="clanMembers"></span> membres</span></h2>
      <div id="clanMembersList">
        <table>
          <thead>
            <tr>
              <th>Nom du joueur</th>
              <th>Nombre de combattants</th>
            </tr>
          </thead>
          <tbody id="clanPlayers">
            <!-- Les données seront ajoutées ici avec JavaScript -->
          </tbody>
        </table>
      </div>
    </div>

    <!-- Section pour les joueurs n'ayant pas de clan -->
    <div id="noClanSection" hidden>
      <button class="btn btn-primary me-3" id="joinClanButton">Rejoindre un clan</button>
      <button class="btn btn-success" id="createClanButton">Créer un clan</button>
    </div>
  </div>

  <!-- Pop-up pour rejoindre un clan -->
<div id="joinClanPopup" class="modal d-none align-items-center justify-content-center">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Rejoindre un clan</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div id="clansList"></div>
        </div>
      </div>
    </div>
  </div>
  

  <!-- Pop-up pour créer un clan -->
<div id="createClanPopup" class="modal d-none align-items-center justify-content-center">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Créer un clan</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="createClanForm">
            <div class="mb-3">
              <label for="clanNameInput" class="form-label">Nom du clan :</label>
              <input type="text" class="form-control" id="clanNameInput" required>
            </div>
            <button type="submit" class="btn btn-primary">Créer</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  

  <!-- Liens vers les fichiers JavaScript de Bootstrap (jQuery requis) -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script> -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  <script src="../controllers/clan.js"></script>
</body>
</html>